FROM node:20-alpine

# Install required packages for health checks and Prisma
RUN apk add --no-cache netcat-openbsd openssl libc6-compat

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Set Prisma engine type for Alpine Linux
ENV PRISMA_QUERY_ENGINE_BINARY=/app/node_modules/prisma/libquery_engine-linux-musl-openssl-3.0.x.so.node
# Generate Prisma client
RUN npx prisma generate

# Copy and make startup script executable
COPY start.sh .
RUN chmod +x start.sh

# Expose port
EXPOSE 3001

# Start development server with our custom script
CMD ["./start.sh"]