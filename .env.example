# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tire_crm_dev"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Tire Master Integration
TIRE_MASTER_API_URL="https://api.tiremaster.local/v1"
TIRE_MASTER_API_KEY="your-tire-master-api-key"
TIRE_MASTER_USERNAME="your-username"
TIRE_MASTER_PASSWORD="your-password"
TIRE_MASTER_SYNC_INTERVAL="300000"

# Communication Services
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"
SENDGRID_FROM_NAME="Tire & Auto Service CRM"

# Application Configuration
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Redis Cache TTL (seconds)
CACHE_TTL="3600"

# File Upload
MAX_FILE_SIZE="10485760"
UPLOAD_DIR="uploads"

# Security
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"